-- üîë SCRIPTKEY check (2-hour rotation)
getgenv().SCRIPTKEY = getgenv().SCRIPTKEY or "ZORI-0"
local hour = os.date("!*t").hour
local validKey = "ZORI-" .. math.floor(hour / 2)

if getgenv().SCRIPTKEY ~= validKey then
    game.Players.LocalPlayer:Kick("‚ùå Invalid key. Check Discord for the current key.")
    return
end

-- üß† Game Place ID Logic
local placeId = game.PlaceId

if placeId == 3082002798 then
    -- üß™ Load & run T-Titans Battlegrounds script
    local success, result = pcall(function()
        return game:HttpGet("https://raw.githubusercontent.com/zerolamar/Obfuscate-Scripts/main/T-Titans%20Battlegrounds")
    end)

    if success then
        local loaded, err = loadstring(result)
        if loaded then
            pcall(loaded)
        else
            game.Players.LocalPlayer:Kick("‚ùå Script error: " .. tostring(err))
        end
    else
        game.Players.LocalPlayer:Kick("‚ùå Failed to fetch script.")
    end

else
    game.Players.LocalPlayer:Kick("‚ö†Ô∏è This game is not supported.")
end
