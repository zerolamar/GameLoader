-- 🔑 Optional SCRIPTKEY check (comment to skip)
getgenv().SCRIPTKEY = getgenv().SCRIPTKEY or "ZORI-0"
local hour = os.date("!*t").hour
local validKey = "ZORI-" .. math.floor(hour / 2)

if getgenv().SCRIPTKEY ~= validKey then
    game.Players.LocalPlayer:Kick("❌ Invalid key. Check Discord for current key.")
    return
end

-- 🧠 Game Place ID Logic
local placeId = game.PlaceId

local scriptMap = {
    [3082002798] = "https://raw.githubusercontent.com/zerolamar/Obfuscate-Scripts/refs/heads/main/T-Titans%20Battlegrounds", -- T-Titans Battlegrounds
}

-- 🎯 Execute if recognized game
if scriptMap[placeId] then
    local success, result = pcall(function()
        return game:HttpGet(scriptMap[placeId])
        print("Trying to load:", scriptMap[placeId])
    end)

    if success then
        loadstring(result)()
    else
        warn("🚫 Failed to load script:", result)
        game.Players.LocalPlayer:Kick("❌ Error loading script. Check GitHub link.")
    end
else
    game.Players.LocalPlayer:Kick("⚠️ Unsupported game. Script will not run here.")
end
